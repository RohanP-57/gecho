rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow all operations for development
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // User-specific posts collection - allow all operations for development
    match /users/{userId}/posts/{postId} {
      allow read, write: if true;
    }
    
    // User-specific comments collection - allow all operations for development
    match /users/{userId}/posts/{postId}/comments/{commentId} {
      allow read, write: if true;
    }
    
    // Global posts collection for feed (read-only aggregated view)
    match /feed_posts/{postId} {
      allow read: if true;
      // Only system can write to feed (via cloud functions or admin)
      allow write: if false;
    }
    
    // User followers/following collections
    match /users/{userId}/followers/{followerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /users/{userId}/following/{followingId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

// Firebase Storage rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    allow read: if true;
    
    // Allow write access to all files (for development - restrict in production)
    allow write: if true;
  }
}